<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="#5B8020">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:background="#5B8020"
            android:gravity="center"
            android:text="Đăng Kí Đặt Sân"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="600sp"
        android:layout_height="wrap_content"
       
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Chọn Ngày:" />

       
      <Spinner
            android:id="@+id/spinner1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:hint="bấm vao đây để chọn ngày"
            />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Chọn Giờ:" />
        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:hint="Bấm vào đây để chọn giờ"/>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ Tên:"
            android:textSize="20sp"
            android:id="@+id/textView4">
    </TextView> 
     <EditText 
         android:id="@+id/editten"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:hint="nguyen van lam">
     </EditText>
    </TableRow>
     <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

         <TextView
             android:id="@+id/textView5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="20sp"
             android:text="Sân Đặt:" />
 
          <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Bấm vào đây để chọn sân" />
    </TableRow>
     <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

         <TextView
             android:id="@+id/textView6"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="20sp"
             android:text="số để liên lạc:" />
 
          <EditText 
              android:id="@+id/editphone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="0973405745"
              />"
    </TableRow>
    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         />

     <Button
         android:id="@+id/button1"
         android:layout_width="40sp"
         android:layout_height="40sp"
         android:layout_marginLeft="200sp" 
         android:text="Luu"/>

"
    </TableRow>
</TableLayout>